<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core" xmlns="sap.m" controllerName="ui5pathdrawer.ui5pathdrawer.controller.View1"
	displayBlock="true">
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>title}">
					<content>
						<Button xmlns="sap.m" text="Button" id="buttonPathId" press="onButtonPress"/>
						<Text xmlns="sap.m" text="{ViewModel>/PathText}" id="textPathId"/>
						<FlexBox id="PolylineDrawerHolder" alignItems="Start" justifyContent="Center"></FlexBox>
					</content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>